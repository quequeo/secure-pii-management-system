<div class="max-w-7xl mx-auto p-4 md:p-6">
  <div class="mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">Audit Logs</h1>
    <p class="text-gray-600">Track all access and modifications to PII records for compliance and security</p>
  </div>

  <!-- Statistics Cards -->
  <div class="grid grid-cols-2 md:grid-cols-6 gap-4 mb-6">
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="text-blue-600 text-sm font-medium mb-1">Today</div>
      <div class="text-2xl font-bold text-blue-900"><%= @stats[:total_today] %></div>
    </div>
    <div class="bg-purple-50 border border-purple-200 rounded-lg p-4">
      <div class="text-purple-600 text-sm font-medium mb-1">This Week</div>
      <div class="text-2xl font-bold text-purple-900"><%= @stats[:total_week] %></div>
    </div>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="text-green-600 text-sm font-medium mb-1">üëÅ Views</div>
      <div class="text-2xl font-bold text-green-900"><%= @stats[:views] %></div>
    </div>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="text-yellow-600 text-sm font-medium mb-1">‚ûï Creates</div>
      <div class="text-2xl font-bold text-yellow-900"><%= @stats[:creates] %></div>
    </div>
    <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
      <div class="text-orange-600 text-sm font-medium mb-1">‚úèÔ∏è Updates</div>
      <div class="text-2xl font-bold text-orange-900"><%= @stats[:updates] %></div>
    </div>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="text-red-600 text-sm font-medium mb-1">üóë Deletes</div>
      <div class="text-2xl font-bold text-red-900"><%= @stats[:destroys] %></div>
    </div>
  </div>

  <!-- Audit Logs Table -->
  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <% if @audit_logs.any? %>
      <!-- Desktop View -->
      <div class="hidden md:block">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Record</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">IP Address</th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Timestamp</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @audit_logs.each do |log| %>
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                    <%= case log.action
                        when 'view' then 'bg-blue-100 text-blue-800'
                        when 'create' then 'bg-green-100 text-green-800'
                        when 'update' then 'bg-yellow-100 text-yellow-800'
                        when 'destroy' then 'bg-red-100 text-red-800'
                        end %>">
                    <%= log.action.capitalize %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-900"><%= log.auditable_type %> #<%= log.auditable_id %></div>
                  <div class="text-xs text-gray-500"><%= log.details %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.user_identifier || 'Anonymous' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 font-mono">
                  <%= log.ip_address || 'N/A' %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= log.formatted_created_at %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Mobile View -->
      <div class="md:hidden divide-y divide-gray-200">
        <% @audit_logs.each do |log| %>
          <div class="p-4">
            <div class="flex items-start justify-between mb-2">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                <%= case log.action
                    when 'view' then 'bg-blue-100 text-blue-800'
                    when 'create' then 'bg-green-100 text-green-800'
                    when 'update' then 'bg-yellow-100 text-yellow-800'
                    when 'destroy' then 'bg-red-100 text-red-800'
                    end %>">
                <%= log.action.capitalize %>
              </span>
              <span class="text-xs text-gray-500"><%= time_ago_in_words(log.created_at) %> ago</span>
            </div>
            <div class="text-sm text-gray-900 font-medium mb-1"><%= log.details %></div>
            <div class="text-xs text-gray-500">
              <div>User: <%= log.user_identifier || 'Anonymous' %></div>
              <div>IP: <%= log.ip_address || 'N/A' %></div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <i class="ph ph-clipboard-text text-6xl text-gray-300 mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No Audit Logs</h3>
        <p class="text-gray-500">Audit logs will appear here as actions are performed on PII records</p>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-sm text-gray-500">
    <p>üìä Showing last 100 audit log entries. Logs are retained for compliance and security purposes.</p>
  </div>
</div>

