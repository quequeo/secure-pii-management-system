<div>
  <%= form.label field, label, class: "block text-sm font-medium text-gray-700 mb-1" %>
  <%= form.send(type, field, **options.merge(required: required, class: field_classes)) %>
  
  <% if hint %>
    <p class="mt-1 text-sm text-gray-500"><%= hint %></p>
  <% end %>
  
  <% if has_errors? %>
    <p class="mt-1 text-sm text-red-600"><%= error_messages %></p>
  <% end %>
</div>

